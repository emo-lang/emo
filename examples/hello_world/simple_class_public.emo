class Person {
  var name: String
  public var age: Int

  const maxAge = 35

  func tooOld?() {
    return false
  }

  func greeting() {
    if self.tooOld?() {
      println(self.name, " is too old to find a job")
    } else {
      println("Welcome, ", self.name)
    }
  }
}

const person = new(Person, {"name": "David Lee", "age": 20})

println("Your age: ", person.age)
person.greeting()
