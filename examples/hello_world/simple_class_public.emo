class Person {
  var name: String
  public var age: Int

  const maxAge = 35

  func tooOld?() {
    return self.age > maxAge
  }

  func greeting() {
    if self.tooOld?() {
      println(self.name, " is too old to find a job")
    } else {
      println("Welcome, ", self.name)
    }
  }

  private
  func olderThan?(max: Int) -> Bool {
    return self.age > max
  }
}

const person = new(Person, {name: "David Lee", age: 33})

person.greeting()
