class Person {
	public var name: String
	var age: Int

	func tooOld?() -> Bool {
		return self.age > MAX_AGE
	}
}

define(MAX_AGE, 35)

var person = new(Person, {"name": "David Lee", "age": 36})

if person.tooOld?() {
	println("You're too old to find a job")
} else {
	println("Welcome, ", person.name)
}
